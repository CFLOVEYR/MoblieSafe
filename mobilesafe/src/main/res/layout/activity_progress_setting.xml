<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tofirst="http://schemas.android.com/apk/res/com.tofirst.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tofirst.mobilesafe.activity.ProgressSettingActivity">

    <RelativeLayout
        android:id="@+id/rl_progress_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="显示系统进程"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_progress_setting"
            android:clickable="false"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />

    </RelativeLayout>
    <com.tofirst.mobilesafe.view.SettingUpdateItemView
        android:id="@+id/rl_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tofirst:desc_off="定时清理已关闭"
        tofirst:desc_on="定时清理已开启"
        tofirst:title="定时清理进程" />
</LinearLayout>
