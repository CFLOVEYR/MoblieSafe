<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tofirst="http://schemas.android.com/apk/res/com.tofirst.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TitleTheme"
                android:text="设置中心" />

            <com.tofirst.mobilesafe.view.SettingUpdateItemView
                android:id="@+id/rl_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tofirst:desc_off="自动更新已关闭"
                tofirst:desc_on="自动更新已开启"
                tofirst:title="自动更新设置" />

            <com.tofirst.mobilesafe.view.SettingAddressItemView
                android:id="@+id/rl_setting_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tofirst:desc_off="归属地显示已关闭"
                tofirst:desc_on="归属地显示已开启"
                tofirst:title="电话归属地显示设置" />

            <com.tofirst.mobilesafe.view.SettingToastStyleItemView
                android:id="@+id/rl_setting_toast_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tofirst:title="归属地提示框风格" />

            <com.tofirst.mobilesafe.view.SettingToastLocationItemView
                android:id="@+id/rl_setting_toast_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tofirst:title="归属地提示框位置" />

            <com.tofirst.mobilesafe.view.SettingBlackNumItemView
                android:id="@+id/rl_setting_blackNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tofirst:desc_off="黑名单拦截已关闭"
                tofirst:desc_on="黑名单拦截已开启"
                tofirst:title="黑名单拦截是否开启" />

            <com.tofirst.mobilesafe.view.SettingWatchDogItemView
                android:id="@+id/rl_setting_WatchDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tofirst:desc_off="看萌狗已关闭"
                tofirst:desc_on="看萌狗已开启"
                tofirst:title="看萌狗是否开启" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>