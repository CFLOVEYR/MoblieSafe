<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tofirst="http://schemas.android.com/apk/res/com.tofirst.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleTheme"
        android:text="设置中心" />

    <com.tofirst.mobilesafe.view.SettingUpdateItemView
        android:id="@+id/rl_setting"
        tofirst:title="自动更新设置"
        tofirst:desc_on="自动更新已开启"
        tofirst:desc_off="自动更新已关闭"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.tofirst.mobilesafe.view.SettingAddressItemView
        android:id="@+id/rl_setting_address"
        tofirst:title="电话归属地显示设置"
        tofirst:desc_on="归属地显示已开启"
        tofirst:desc_off="归属地显示已关闭"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.tofirst.mobilesafe.view.SettingToastStyleItemView
        android:id="@+id/rl_setting_toast_style"
        tofirst:title="归属地提示框风格"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>