<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tofirst="http://schemas.android.com/apk/res/com.tofirst.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleTheme"
        android:text="2. 手机卡绑定" />

    <TextView
        style="@style/ContentTheme"
        android:text="通过绑定SIM卡:" />

    <TextView
        style="@style/ContentTheme"
        android:gravity="center_vertical"
        android:text="下次重启如果发现SIM卡发生变化" />

    <TextView
        style="@style/ContentTheme"
        android:gravity="center_vertical"
        android:text="就会发送报警短信" />

   <com.tofirst.mobilesafe.view.SettingUpdateItemView
        android:id="@+id/rl_setting"
        tofirst:title="点击绑定SIM卡"
        tofirst:desc_on="SIM卡已经绑定"
        tofirst:desc_off="SIM卡没有绑定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="0.2dp"
       android:background="@color/gray"
       ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/setup2" />
        <Button 
            style="@style/PreviousButtonTheme"
            android:text="上一步"
            />

        <Button
            style="@style/NextButtonTheme"
            android:text="下一步" />

    </RelativeLayout>

</LinearLayout>